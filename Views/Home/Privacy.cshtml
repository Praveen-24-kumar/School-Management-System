@{
    ViewData["Title"] = "Privacy Policy";
}
<h1>@ViewData["Title"]</h1>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - School Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            margin: 0;
            padding: 0;
        }

        .sidebar {
            width: 250px;
            background-color: #0b2c52;
            height: 100vh;
            position: fixed;
            overflow-y: auto;
            padding-top: 20px;
        }

            .sidebar a {
                color: white;
                padding: 12px 20px;
                display: block;
                text-decoration: none;
            }

                .sidebar a:hover {
                    background-color: #0e3d72;
                }

        .topbar {
            height: 60px;
            background-color: #ffffff;
            border-bottom: 1px solid #ddd;
            padding: 10px 20px;
            margin-left: 250px;
        }

        .main-content {
            margin-left: 250px;
            margin-top: 60px;
            padding: 20px;
        }
    </style>
</head>
<body>

    <!-- Sidebar -->
    <div class="sidebar">
        <h5 class="text-white text-center">Akkhor™</h5>
        <a href="#"><i class="fa fa-dashboard"></i> Dashboard</a>
        <a href="#"><i class="fa fa-user"></i> Students</a>
        <a href="#"><i class="fa fa-chalkboard-teacher"></i> Teachers</a>
        <a href="#"><i class="fa fa-users"></i> Parents</a>
        <a href="#"><i class="fa fa-book"></i> Library</a>
        <a href="#"><i class="fa fa-coins"></i> Account</a>
        <a href="#"><i class="fa fa-calendar"></i> Class Routine</a>
        <a href="#"><i class="fa fa-clipboard"></i> Notice</a>
    </div>

    <!-- Top Navbar -->
    <div class="topbar d-flex justify-content-between align-items-center">
        <span>Welcome to Akkhor School Management System</span>
        <div>
            <span class="me-3"><i class="fa fa-globe"></i> English</span>
            <span><i class="fa fa-user-circle"></i> Admin</span>
        </div>
    </div>

    @* <!-- Main Content -->
    <div class="main-content">
        @RenderBody()
    </div> *@

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
