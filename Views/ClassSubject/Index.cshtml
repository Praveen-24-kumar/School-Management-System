@model SubjectMaster

<div class="container mt-4">
    <div class="row g-4">
        <!-- Left Side: Add / Edit Form -->
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Add / Edit Subject</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Save" method="post">
                        <input type="hidden" asp-for="Subject.SubjectId" />

                        <div class="mb-3">
                            <label asp-for="Subject.SubjectName" class="form-label"></label>
                            <input asp-for="Subject.SubjectName" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Subject.SubjectType" class="form-label"></label>
                            <select asp-for="Subject.SubjectType" class="form-control">
                                <option>Select</option>
                                <option>Theory</option>
                                <option>Practical</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Subject.Class" class="form-label"></label>
                            <input asp-for="Subject.Class" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Subject.SubjectCode" class="form-label"></label>
                            <input asp-for="Subject.SubjectCode" class="form-control" />
                        </div>
                         
                        <div class="d-flex justify-content-center mt-3">
                            <button type="submit" class="btn btn-warning w-50">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Right Side: Subject List -->
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">Subjects List</h5>
                </div>
                <div class="card-body">
                    <table class="table table-bordered table-striped table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>ID</th>
                                <th>Subject Name</th>
                                <th>Type</th>
                                <th>Class</th>
                                <th>Code</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var s in Model.SubjectList)
                            {
                                <tr>
                                    <td>@s.SubjectId</td>
                                    <td>@s.SubjectName</td>
                                    <td>@s.SubjectType</td>
                                    <td>@s.Class</td>
                                    <td>@s.SubjectCode</td>
                                    <td>
                                        <a asp-action="Save" asp-route-id="@s.SubjectId" class="btn btn-sm btn-success me-1">✏️</a>
                                        <a asp-controller="Subject" asp-action="Delete" asp-route-id="@s.SubjectId"
                                           onclick="return confirm('Are you sure to delete?')" class="btn btn-sm btn-danger">🗑</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
