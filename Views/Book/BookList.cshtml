@model List<SchoolManagement.Models.BookModel>
@* @{
    ViewData["Title"] = "All Book List";
} *@

<div class="container mt-4">
    <h4>All Book List</h4>

        <form method="get" asp-action="BookList">
    <div class="row mb-3">
            <div class="col-md-2 d-flex gap-2">
              
                <a asp-action="BookList" class="btn btn-secondary flex-fill">📚 All</a>
            </div>
        <div class="col-md-3">
            <input type="text" class="form-control" name="bookidSearch" placeholder="# ID Type Here..." value="@Context.Request.Query["bookidSearch"]" />
        </div>
        <div class="col-md-3">
            <input type="text" class="form-control" name="booknameSearch" placeholder="Book Name..." value="@Context.Request.Query["booknameSearch"]" />
        </div>
        <div class="col-md-2">
            <button class="btn btn-primary w-100">Search</button>
        </div>
    </div>
        </form>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th><input type="checkbox" /></th>
                <th>ID</th>
                <th>Book Name</th>
                <th>Writer</th>
                <th>Subject</th>
                <th>Class</th>
                <th>Year</th>
                <th>Creating Date</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td><input type="checkbox" /></td>
                    <td># @book.BookId</td>
                    <td>@book.BookName</td>
                    <td>@book.WriterName</td>
                    <td>@book.Subject</td>
                    <td>@book.Class</td>
                    <td>@book.PublishingYear</td>
                    <td>@book.CreatingDate.ToString("dd/MM/yyyy")</td>
                    <td>
                        <a asp-action="ViewBook" asp-route-id="@book.BookId" class="text-dark me-2"><i class="fa fa-eye"></i></a>
                        <a asp-action="AddBook" asp-route-id="@book.BookId" class="text-success me-2"><i class="fa fa-edit"></i></a>
                        <a asp-action="Delete" asp-route-id="@book.BookId" class="text-danger"><i class="fa fa-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Optional: FontAwesome -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
